---
export interface Props {
  image?: string;
  title?: string;
  description?: string;
}

const { image, title, description } = Astro.props;
---

<section >
  <div class="h-80 relative flex justify-center items-center">
    <img src={image} alt={`Forside bilde til siden "${title}"`} class="object-cover w-full h-full" fetchpriority="high" loading="eager" />
    <h1 class="absolute text-3xl tracking-tight font-bold md:text-4xl py-6 px-10 bg-base-100 italic">{title}</h1>
  </div>
  { description && <div class="p-4 bg-base-100"><p class="max-w-2xl mx-auto border-b-2 pb-5 pt-2">{description}</p></div>}
</section>