---
import type { MarkdownLayoutProps } from 'astro';

import WikiPageNavigation from '~/components/widgets/WikiPageNavigation.astro';
import PageLayout from './PageLayout.astro';

type Props = MarkdownLayoutProps<{
  // Define frontmatter props here
  title: string;
  description: string;
  createdDate: string;
  updatedDate: string;
  tags: string[];
}>;

const { frontmatter } = Astro.props;
---

<PageLayout
  meta={{ title: frontmatter.title, description: frontmatter.description }}
>
  <WikiPageNavigation selectedPage={frontmatter.title} />
  <article class="prose max-w-2xl mx-auto p-4">
  <slot />
</article>
</PageLayout>
