---
import Layout from '~/layouts/BaseLayout.astro';
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import Announcement from '~/components/widgets/Announcement.astro';

import type { MetaSEO } from '~/types';
import { headerData } from '~/data';
import WikiPageNavigation from '~/components/widgets/WikiPageNavigation.astro';

export interface Props {
  meta?: MetaSEO;
}

const { meta, frontmatter } = Astro.props;
---

<Layout {meta}>
  <slot name='announcement'>
    <Announcement />
  </slot>
  <slot name='header'>
    <Header {...headerData} />
  </slot>
  <main class='bg-base-100'>
    <div class='drawer drawer-mobile'>
      <input id='my-drawer-2' type='checkbox' class='drawer-toggle' />
      <div class='drawer-content p-4'>
        <label for='my-drawer-2' class='btn btn-primary drawer-button lg:hidden'
          >Se alle wiki sider</label
        >
        <article class='prose'>
          {
            frontmatter && frontmatter.title ? (
              <h1 class='pt-4'>{frontmatter.title}</h1>
            ) : null
          }
          {
            frontmatter && frontmatter.description ? (
              <p>{frontmatter.description}</p>
            ) : null
          }
          <slot />
        </article>
      </div>
      <div class='drawer-side'>
        <label for='my-drawer-2' class='drawer-overlay'></label>
        <WikiPageNavigation />
      </div>
    </div>
  </main>
  <slot name='footer'>
    <Footer />
  </slot>
</Layout>
